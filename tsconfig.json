{
  "extends": "@tsconfig/node18/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": false,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./lib/typings"
    ],
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "app-search/",
    "ignore/"
  ]
}
